{
  "name": "roster-web-developer",
  "image": ".local/roster-web-developer",
  "tag": "latest",
  "apiVersion": "v1",
  "actions": [
    {
      "name": "DiagnoseBug",
      "description": "Perform a root-cause analysis of a bug based on a description and context.",
      "inputs": [
        {
          "type": "text",
          "name": "bug_description"
        },
        {
          "type": "text",
          "name": "error_context"
        }
      ],
      "outputs": [
        {
          "type": "text",
          "name": "bug_diagnosis"
        }
      ]
    },
    {
      "name": "WriteCode",
      "description": "Write code to implement a feature based on a requirements document",
      "inputs": [
        {
          "type": "text",
          "name": "requirements_document"
        }
      ],
      "outputs": [
        {
          "type": "code",
          "name": "code"
        }
      ]
    },
    {
      "name": "CreatePullRequest",
      "description": "Create a Github pull request for a branch of code",
      "inputs": [
        {
          "type": "code",
          "name": "code"
        }
      ],
      "outputs": [
        {
          "type": "github_pr",
          "name": "pull_request"
        }
      ]
    }
  ]
}