{
  "name": "WebDeveloper",
  "executor": "local",
  "image": "web_developer",
  "apiVersion": "v1",
  "actions": [
    {
      "name": "PlanCodeChanges",
      "description": "Decide which files should be changed, created or deleted, and provide a short description of the changes required in each.",
      "inputs": [
        {
          "type": "text",
          "name": "requirements_document"
        },
        {
          "type": "text",
          "name": "codebase_tree"
        }
      ],
      "outputs": [
        {
          "type": "text",
          "name": "implementation_plan"
        }
      ]
    },
    {
      "name": "WriteCode",
      "description": "Write code within a codebase based on an implementation plan",
      "inputs": [
        {
          "type": "text",
          "name": "codebase_tree"
        },
        {
          "type": "text",
          "name": "implementation_plan"
        }
      ],
      "outputs": [
        {
          "type": "code",
          "name": "code"
        }
      ]
    },
    {
      "name": "RefineCode",
      "description": "Write code to implement a feature based on a requirements document",
      "inputs": [
        {
          "type": "text",
          "name": "requirements_document"
        },
        {
          "type": "text",
          "name": "codebase_tree"
        },
        {
          "type": "code",
          "name": "code"
        }
      ],
      "outputs": [
        {
          "type": "code",
          "name": "refined_code"
        }
      ]
    }
  ]
}